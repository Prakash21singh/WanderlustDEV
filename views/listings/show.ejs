<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3 mt-3">
    <b><%=listing.title %></b>
  </div>

  <div class="card col-6 offset-3 show-card listing-card" style="width: 35rem">
    <img
      src="<%= listing.image%>"
      class="card-img-top show-img"
      alt="Listed_image"
      height="300px"
    />
    <div class="card-body">
      <p class="card-text">
        <br />
        <%=listing.description%>
        <br />
        &#8377; <%=listing.price.toLocaleString("en-IN") %>
        <br />
        <%=listing.location %> <br />
        <%=listing.country %> <br />
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href=" /listings/<%= listing._id%>/edit"
      class="btn btn-dark offset-3 edit-btn"
      >Edit</a
    >
    <br />
    <br />
    <form action="/listings/<%= listing.id%>?_method=DELETE" method="POST">
      <button class="btn btn-dark offset-5 del-btn">Delete</button>
    </form>
  </div>
</div>
<hr />

<!-- Reviews -->

<div class="col-8 offset-3 mt-3">
  <h3>Leave a comment</h3>
</div>

<div class="offset-3">
  <form
    action="/listings/<%= listing._id%>/reviews"
    method="POST"
    class="needs-validation"
    novalidate
  >
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range"
      />
    </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Leave a comment</label>
      <textarea
        type="text"
        class="form-control"
        name="review[comment]"
        rows="5"
        cols="30"
        required
      ></textarea>
      <div class="invalid-feedback">Please add a comment for review</div>
    </div>
    <div><button class="btn btn-outline-dark">Submit</button></div>
  </form>

  <hr />
  <h3>All Reviews</h3>
  <div class="row">
    <% for( review of listing.reviews){ %>

    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">Rakesh lala</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating%> stars</p>
      </div>

      <form
        class="mb-2"
        action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-sm btn-dark mt-2 mb-1">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
