<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3 mt-3">
    <h3>Listing Details</h3>
  </div>

  <div class="card col-6 offset-3 show-card" style="width: 25rem">
    <img
      src="<%= listing.image%>"
      class="card-img-top show-img"
      alt="Listed_image"
    />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %> </b>
        <br />
        <%=listing.description%>
        <br />
        &#8377; <%=listing.price.toLocaleString("en-IN") %>
        <br />
        <%=listing.location %> <br />
        <%=listing.country %> <br />
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href=" /listings/<%= listing._id%>/edit"
      class="btn btn-dark offset-3 edit-btn"
      >Edit</a
    >
    <br />
    <br />
    <form action="/listings/<%= listing.id%>?_method=DELETE" method="POST">
      <button class="btn btn-dark offset-5 del-btn">Delete</button>
    </form>
  </div>
</div>
