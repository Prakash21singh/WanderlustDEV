<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <br /><br />
      <h1>Add your new listing</h1>

      <form
        action="/listings"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a Sticky Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div>
          <label for="listing[image]" class="form-label"
            >Upload Listing Image</label
          >
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="1500"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Jaipur ,Rajasthan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <br />
        <div class="dropdown-center">
          <select name="listing[category]" class="form-control">
            <option value="Trending">Trending</option>
            <option value="Pools">Pools</option>
            <option value="Rooms">Rooms</option>
            <option value="Castle">Castle</option>
            <option value="Mountains">Mountains</option>
            <option value="Icons">Icons</option>
            <option value="Play">Play</option>
            <option value="Beach">Beach</option>
            <option value="Treehouse">Treehouse</option>
            <option value="Farms">Farms</option>
            <option value="Igloo">Igloo</option>
            <option value="Ocean">Ocean</option>
          </select>
        </div>

        <button class="btn add-btn mt-3">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
